<script>
    // 等待 DOM 加载完成
    document.addEventListener('DOMContentLoaded', function() {
        initApp();
    });

    function initApp() {
        setupEventListeners();
        setupInterface();
        document.body.style.visibility = 'visible';
    }

    function setupEventListeners() {
        // 天气预报卡片点击事件
        document.addEventListener('click', function(event) {
            const card = event.target.closest('.forecast-card');
            if (card) {
                handleForecastCardClick(card);
            }
        });

        // 语言切换按钮点击事件
        const languageBtn = document.querySelector('.language-btn');
        if (languageBtn) {
            languageBtn.addEventListener('click', function() {
                const list = document.querySelector('.language-list');
                if (list) list.classList.toggle('show');
            });
        }

        // 温度单位切换按钮点击事件
        const unitBtn = document.querySelector('.unit-btn');
        if (unitBtn) {
            unitBtn.addEventListener('click', function() {
                const list = document.querySelector('.unit-list');
                if (list) list.classList.toggle('show');
            });
        }

        // 点击外部关闭下拉菜单
        document.addEventListener('click', function(event) {
            if (!event.target.closest('.language-btn') && !event.target.closest('.unit-btn')) {
                const lists = document.querySelectorAll('.language-list, .unit-list');
                lists.forEach(list => list.classList.remove('show'));
            }
        });
    }

    function handleForecastCardClick(card) {
        try {
            const weatherData = JSON.parse(card.dataset.weather || '{}');
            updateOutfitRecommendations(weatherData);
        } catch (error) {
            console.error('Error:', error);
            showError('无法加载穿搭推荐');
        }
    }

    function setupInterface() {
        const userLang = navigator.language || navigator.userLanguage;
        setLanguage(userLang.startsWith('zh') ? 'zh' : 'en');
    }

    function setLanguage(lang) {
        const translations = {
            zh: {
                title: '最好的天气穿衣指南',
                subtitle: '几秒内将生成令人惊叹的AI推荐穿搭',
                instruction: '直接在下方选择/输入国家，城市，日期',
                countryLabel: '选择国家',
                cityLabel: '选择城市',
                dateLabel: '选择日期'
            },
            en: {
                title: 'Best Weather Dress Guide',
                subtitle: 'AI-powered outfit recommendations in seconds',
                instruction: 'Select/input country, city, and date below',
                countryLabel: 'Select Country',
                cityLabel: 'Select City',
                dateLabel: 'Select Date'
            }
        };

        const text = translations[lang] || translations.en;
        
        // 更新页面文本
        document.title = text.title;
        
        // 更新界面文本
        updateInterfaceText(text);
        
        // 更新语言按钮文本
        const currentLang = document.getElementById('current-lang');
        if (currentLang) {
            currentLang.textContent = lang === 'zh' ? '中文' : 'English';
        }
    }

    function updateInterfaceText(text) {
        const elements = {
            title: document.querySelector('.app-title'),
            subtitle: document.querySelector('.app-subtitle'),
            instruction: document.querySelector('.app-instruction'),
            countryLabel: document.querySelector('#country-title .nav-text'),
            cityLabel: document.querySelector('#city-title .nav-text'),
            dateLabel: document.querySelector('#date-title .nav-text')
        };

        if (elements.title) elements.title.textContent = text.title;
        if (elements.subtitle) elements.subtitle.textContent = text.subtitle;
        if (elements.instruction) elements.instruction.textContent = text.instruction;
        if (elements.countryLabel) elements.countryLabel.textContent = text.countryLabel;
        if (elements.cityLabel) elements.cityLabel.textContent = text.cityLabel;
        if (elements.dateLabel) elements.dateLabel.textContent = text.dateLabel;
    }

    function updateOutfitRecommendations(weatherData) {
        const container = document.getElementById('outfit-recommendations');
        if (!container) return;

        try {
            // 生成穿搭建议
            const recommendations = generateOutfitRecommendations(weatherData);
            displayOutfitRecommendations(recommendations, container);
        } catch (error) {
            console.error('生成穿搭建议时出错:', error);
            showError('无法生成穿搭建议');
        }
    }

    function generateOutfitRecommendations(weatherData) {
        // 根据天气数据生成穿搭建议
        return {
            top: ['轻薄外套', 'T恤'],
            bottom: ['牛仔裤', '休闲裤'],
            shoes: ['运动鞋', '休闲鞋'],
            accessories: ['太阳镜', '帽子']
        };
    }

    function displayOutfitRecommendations(recommendations, container) {
        container.innerHTML = `
            <div class="outfit-card">
                <h3>推荐穿搭</h3>
                <div class="outfit-content">
                    <ul>
                        ${Object.entries(recommendations).map(([category, items]) => `
                            <li>
                                <strong>${category}:</strong> ${items.join(', ')}
                            </li>
                        `).join('')}
                    </ul>
                </div>
            </div>
        `;
    }

    function showError(message) {
        const errorDiv = document.createElement('div');
        errorDiv.className = 'error-message';
        errorDiv.textContent = message;
        
        const container = document.querySelector('.container');
        if (container) {
            container.insertBefore(errorDiv, container.firstChild);
            setTimeout(() => errorDiv.remove(), 5000);
        }
    }
</script>
